@using DojoSurvey.Models
@model Survey

<form asp-action="Sub" asp-controller="Home" method="post" class="col-6 mx-auto">

    <h2 class="text-center">Dojo Survey</h2>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="Location"></label>
        <select asp-for="Location">
        <option value="">Choose one</option>
        <option value="Chicago"> Chicago</option>
        <option value="Tulsa">Tulsa</option>
        <option value="Dallas">Dallas</option>
        <option value="Silicon Valley"> Silicon Valley </option>
        </select><br>
        <span class="text-danger" asp-validation-for="Location"></span>
    </div>

    <div class="form-group">
        <label asp-for="Language"></label>
        <select asp-for="Language">
        <option value="">Choose one</option>
        <option value="Java">Java</option>
        <option value="C#">C#</option>
        <option value="Python">Python</option>
        <option value="JavaScript">JavaScript</option>
        <option value="PHP">PHP</option>
        </select><br>
        <span class="text-danger" asp-validation-for="Language"></span>
    </div>

    <div class="form-group">
        <label asp-for="Comment"></label>
        <textarea asp-for="Comment" rows="4" cols="50">
        </textarea>
        <span class="text-danger" asp-validation-for="Comment"></span>
    </div>

    <input type="submit" value="Build" class="btn btn-primary">
</form>

    <p>@ViewBag.ThisText</p>

</div>
